# this will hold all the alias_that are being used
# Shortcuts
alias _='sudo'
alias v='vim'
alias rr='rm -rf'

# docker 
alias d='docker'
alias dc='docker-compose' # short the docker-compose commend

#alias pbcopy='xclip -selection clipboard'
#alias pbpaste='xclip -selection clipboard -o'

# GIT

alias g='git' # short the git commend
alias ga='git add'
alias gb='git branch' 
alias gc='git commit'
alias gs='git status'
alias gp='git push'
alias gm='git merge'
alias gr='git remote'
alias gco='git checkout'
alias gcp='git cherry-pick'

# Directory listing/traversal

alias l='ls -la'    # List in long format, include dotfiles
alias ld='ls -d */' # List in long format, only directories
alias ~='cd ~'
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../../'
alias -- -='cd -'               # Go to previous dir with -
alias cd.='cd $(readlink -f .)' # Go to real dir (i.e. if current dir is linked)

# Recursively remove .DS_Store files
alias cleanupds="find . -type f -name '*.DS_store' -ls -delete"

