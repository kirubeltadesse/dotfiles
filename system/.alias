# this will hold all the alias_that are being used
# Shortcuts
alias _='sudo'
alias v='vim'
alias rr='rm -rf'

# docker 
alias d='docker'
alias dc='docker-compose' # short the docker-compose commend

# GIT
alias g='git' # short the git commend
alias ga='git add'
alias gb='git branch' 
alias gc='git commit'
alias gs='git status'
alias gsl='git stash list'
alias gss='git stash save'
alias gsp='git stash push'
alias gp='git push'
alias gm='git merge'
alias gr='git remote'
alias gco='git checkout'
alias gcp='git cherry-pick'

# Directory listing/traversal
# some more ls aliases
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'
alias ld='ls -d */' # List in long format, only directories
alias ~='cd ~'
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../../'
alias -- -='cd -'               # Go to previous dir with -
alias cd.='cd $(readlink -f .)' # Go to real dir (i.e. if current dir is linked)

