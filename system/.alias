# this will hold all the alias_that are being used
# Shortcuts Directory listing/traversal
# Directory listing/traversal

# some more ls aliases
alias ~='cd ~'
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../../'
alias .....='cd ../../../../'
alias ......='cd ../../../../../'
alias _='sudo'
alias -- -='cd -'               # Go to previous dir with -
alias cd.='cd $(readlink -f .)' # Go to real dir (i.e. if current dir is linked)
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'
alias ld='ls -d */' # List in long format, only directories
alias rr='rm -rf'
alias ls='ls --color=auto' # this enables coloring

alias v='nvim'

# DOCKER
alias d='docker'
alias dc='docker compose' # short the docker compose commend

# GIT
alias g='git' # short the git commend
alias tasks='git grep -EI "BUG|TODO|FIXME|FIXIT|HACK"'
# Recursively remove .DS_Store files need for macOS
alias cleanupds="find . -type f -name '*.DS_store' -ls -delete"

# WEB SEARCH
alias '?'=dock
alias '??'=google
alias '???'=gpt

